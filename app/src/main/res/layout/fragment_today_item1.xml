<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TodayItem1Fragment"
    android:clickable="true"
    android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:src="@drawable/star"
            android:background="#ffffff"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Place Holder"
            android:id="@+id/PlaceHolder1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButton4"
            android:layout_toEndOf="@+id/imageButton4" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/trash"
                android:id="@+id/button17"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:onClick="setEmpty1"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/checkwhite"
                android:id="@+id/complete1"
                android:layout_alignTop="@+id/PlaceHolder1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="setFinished1" />
        </LinearLayout>
</RelativeLayout>
